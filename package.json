{
  "name": "myposio",
  "version": "1.0.0",
  "description": "Catalog and product lists for myposio.fi",
  "main": "server.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "client-install": "npm install --prefix client",
